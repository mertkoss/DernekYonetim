@{
    ViewData["Title"] = "Giriş Yap";
    // Layout kullanıyorsan ve bu sayfa full HTML olduğu için sorun çıkarsa aç:
    // Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        :root {
            --bg: #ffffff;
            --text: #0f172a;
            --muted: #64748b;
            --border: #e5e7eb;
            --soft: #f8fafc;
            --primary: #2563eb;
            --primary-soft: #eff6ff;
            --shadow: 0 18px 45px rgba(15,23,42,.08);
            --shadow2: 0 10px 24px rgba(15,23,42,.06);
            --radius: 18px;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: "Inter", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            background: var(--bg);
            color: var(--text);
        }

        .top-accent {
            height: 10px;
            background: linear-gradient(90deg, rgba(37,99,235,.25), rgba(16,185,129,.18), rgba(168,85,247,.18));
        }

        .page {
            min-height: calc(100vh - 10px);
            display: flex;
            align-items: center;
            padding: 48px 0;
        }

        .title {
            font-weight: 700;
            letter-spacing: -.02em;
            margin: 0;
        }

        .subtitle {
            margin: 6px 0 0 0;
            color: var(--muted);
            font-size: 14px;
        }

        .wrap {
            background: #fff;
            border: 1px solid var(--border);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        .side {
            position: relative;
            min-height: 220px;
            background: radial-gradient(600px 240px at 30% 30%, rgba(37,99,235,.18), transparent 60%), radial-gradient(520px 220px at 70% 30%, rgba(16,185,129,.14), transparent 60%), radial-gradient(520px 220px at 60% 80%, rgba(168,85,247,.12), transparent 60%), linear-gradient(180deg, #ffffff, #f8fafc);
            border-bottom: 1px solid var(--border);
        }

        .side-inner {
            position: absolute;
            inset: 0;
            padding: 26px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .badge-soft {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 10px 12px;
            border-radius: 999px;
            background: var(--primary-soft);
            color: #1d4ed8;
            font-weight: 600;
            font-size: 13px;
            width: fit-content;
        }

        .mini-card {
            background: rgba(255,255,255,.85);
            border: 1px solid var(--border);
            border-radius: 14px;
            padding: 12px 14px;
            box-shadow: var(--shadow2);
        }

            .mini-card b {
                font-weight: 700;
            }

            .mini-card div {
                color: var(--muted);
                font-size: 13px;
                margin-top: 2px;
            }

        .login-wrap {
            padding: 22px;
        }
        @@media (min-width: 992px) {
            .wrap

        {
            display: grid;
            grid-template-columns: 42% 58%;
        }

        .side {
            min-height: 520px;
            border-bottom: none;
            border-right: 1px solid var(--border);
        }

        .login-wrap {
            padding: 34px;
        }

        }

        .form-group {
            position: relative;
            margin-bottom: 14px;
        }

        .form-control {
            height: 50px;
            border-radius: 14px;
            border: 1px solid var(--border);
            background: #fff;
            color: var(--text);
            padding: 16px 44px 10px 14px;
            outline: none;
            box-shadow: none !important;
        }

            .form-control:focus {
                border-color: rgba(37,99,235,.55);
                box-shadow: 0 0 0 4px rgba(37,99,235,.10) !important;
            }

        .form-control-placeholder {
            position: absolute;
            top: 15px;
            left: 14px;
            color: #94a3b8;
            pointer-events: none;
            transition: .15s ease;
            font-size: 13px;
        }

        .form-control:not(:placeholder-shown) + .form-control-placeholder,
        .form-control:focus + .form-control-placeholder {
            top: 7px;
            font-size: 11px;
            color: #64748b;
        }

        .field-icon {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            cursor: pointer;
        }

            .field-icon:hover {
                color: #475569;
            }

        .btn-primary {
            height: 50px;
            border-radius: 14px;
            font-weight: 700;
            letter-spacing: -.01em;
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            border: none;
            box-shadow: 0 12px 24px rgba(37,99,235,.18);
        }

            .btn-primary:hover {
                filter: brightness(1.02);
            }

        .helper-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .checkbox-wrap {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--muted);
            user-select: none;
            font-size: 14px;
        }

            .checkbox-wrap input {
                accent-color: #2563eb;
            }

        a {
            color: #1d4ed8;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .error-box {
            margin-top: 10px;
            background: #fff1f2;
            border: 1px solid #fecdd3;
            color: #9f1239;
            border-radius: 14px;
            padding: 10px 12px;
            font-weight: 600;
            font-size: 14px;
        }

        .divider {
            height: 1px;
            background: var(--border);
            margin: 16px 0;
        }

        .icon-row {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
        }

        .icon-btn {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            border: 1px solid var(--border);
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #475569;
            box-shadow: var(--shadow2);
        }

            .icon-btn:hover {
                background: var(--soft);
            }
    </style>
</head>

<body>
    <div class="top-accent"></div>

    <section class="page">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9 col-xl-8">
                    <div class="text-center mb-3">
                        <h2 class="title">Dernek Yönetim Paneli</h2>
                        <p class="subtitle">Hesabınla giriş yap</p>
                    </div>

                    <div class="wrap">
                        <div class="side">
                            <div class="side-inner">
                                <div>
                                    <span class="badge-soft">
                                        <span class="fa fa-lock"></span>
                                        Güvenli Giriş
                                    </span>
                                </div>

                                <div class="mini-card">
                                    <b>Hızlı erişim</b>
                                    <div>Kullanıcı adını ve şifreni girerek panele eriş.</div>
                                </div>

                                <div class="mini-card">
                                    <b>Yeni misin?</b>
                                    <div>Hesabın yoksa sağ taraftan “Üye Ol” ile oluşturabilirsin.</div>
                                </div>
                            </div>
                        </div>

                        <div class="login-wrap">
                            <div class="d-flex align-items-start justify-content-between">
                                <div>
                                    <h3 class="mb-1" style="font-weight:800; letter-spacing:-.02em;">Giriş Yap</h3>
                                    <div style="color:var(--muted); font-size:14px;">Devam etmek için bilgilerini gir.</div>
                                </div>

                                <div class="icon-row">
                                    <a href="#" class="icon-btn" title="Bilgi"><span class="fa fa-info"></span></a>
                                    <a href="#" class="icon-btn" title="Yardım"><span class="fa fa-question"></span></a>
                                </div>
                            </div>

                            <div class="divider"></div>

                            <!-- Senin istediğin şekilde: method post + name alanları aynı -->
                            <form method="post">
                                <div class="form-group">
                                    <input name="email" type="email" class="form-control" placeholder=" " required />
                                    <label class="form-control-placeholder">E-Posta Adresi</label>
                                </div>

                                <div class="form-group">
                                    <input id="password-field" name="sifre" type="password" class="form-control" placeholder=" " required />
                                    <label class="form-control-placeholder">Şifre</label>
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>

                                <button type="submit" class="btn btn-primary w-100 mt-2">
                                    Giriş Yap
                                </button>

                                @if (ViewBag.Hata != null)
                                {
                                    <div class="error-box">@ViewBag.Hata</div>
                                }

                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
          document.addEventListener("click", function (e) {
            const toggle = e.target.closest(".toggle-password");
            if (!toggle) return;

            const selector = toggle.getAttribute("toggle");
            const input = document.querySelector(selector);
            if (!input) return;

            const isPassword = input.getAttribute("type") === "password";
            input.setAttribute("type", isPassword ? "text" : "password");

            toggle.classList.toggle("fa-eye");
            toggle.classList.toggle("fa-eye-slash");
          });
        })();
    </script>
</body>
</html>
