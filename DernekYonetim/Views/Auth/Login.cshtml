@{
    ViewData["Title"] = "Giriş Yap";
    // Layout kullanıyorsan ve bu sayfa full HTML olduğu için sorun çıkarsa aç:
    // Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Yazı Tipleri (Inter) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    
    <!-- İkon Seti (FontAwesome) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --renk-lacivert: #0a1a5c; /* Kurumsal Lacivert */
            --renk-altin: #b8860b; /* Kurumsal Altın */
            --renk-arkaplan: #f8fafc;
            --renk-yazi: #334155;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            background-color: var(--renk-arkaplan);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        /* Mavi Arka Plan Dekoru */
        .arkaplan-dekor {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 50%;
            background-color: var(--renk-lacivert);
            border-bottom-left-radius: 50px;
            border-bottom-right-radius: 50px;
            z-index: 0;
        }

        /* Kart Yapısı */
        .giris-karti {
            background-color: #ffffff;
            width: 100%;
            max-width: 400px;
            border-radius: 20px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            position: relative;
            z-index: 10;
            overflow: hidden;
            margin: 20px;
        }

        .kart-baslik {
            text-align: center;
            padding: 40px 30px 10px 30px;
        }

        .logo-kutu {
            width: 90px;
            height: 90px;
            margin: 0 auto 15px auto;
            background: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            border: 4px solid var(--renk-arkaplan);
            overflow: hidden;
        }

        .baslik-yazi {
            color: var(--renk-lacivert);
            font-weight: 800;
            font-size: 22px;
            margin: 0;
        }

        .kart-icerik {
            padding: 20px 40px 40px 40px;
        }

        .form-grup {
            margin-bottom: 20px;
            position: relative;
        }

        .etiket {
            font-size: 14px;
            font-weight: 600;
            color: var(--renk-yazi);
            margin-bottom: 8px;
            display: block;
            margin-left: 4px;
        }

        .input-kapsayici {
            position: relative;
            display: flex;
            align-items: center;
        }

        .ozel-input {
            width: 100%;
            height: 50px;
            padding: 10px 45px;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            font-size: 15px;
            color: #333;
            outline: none;
            transition: 0.3s;
            background: #f8fafc;
            position: relative;
            z-index: 1;
        }

            .ozel-input:focus {
                background: #fff;
                border-color: var(--renk-lacivert);
                box-shadow: 0 0 0 4px rgba(10, 26, 92, 0.1);
            }

        /* --- İKON RENKLENDİRME --- */
        .ikon-sol {
            position: absolute;
            left: 15px;
            color: var(--renk-altin); /* Varsayılan: Altın Rengi */
            font-size: 18px;
            z-index: 10;
            pointer-events: none;
            transition: color 0.3s ease;
        }

        /* Input'a tıklayınca ikon Lacivert olur */
        .ozel-input:focus ~ .ikon-sol {
            color: var(--renk-lacivert);
        }

        .ikon-sag {
            position: absolute;
            right: 15px;
            color: var(--renk-lacivert);
            cursor: pointer;
            font-size: 18px;
            z-index: 10;
            opacity: 0.7;
            transition: 0.3s;
        }

            .ikon-sag:hover {
                opacity: 1;
                color: var(--renk-altin);
            }

        .btn-lacivert {
            width: 100%;
            height: 50px;
            background-color: var(--renk-lacivert);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            transition: 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 10px;
        }

            .btn-lacivert:hover {
                background-color: #051030;
            }

        .link-unuttum {
            font-size: 12px;
            font-weight: 700;
            color: var(--renk-altin);
            text-decoration: none;
            float: right;
            margin-top: 8px;
        }

        .alt-gecis {
            text-align: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #e2e8f0;
        }

        .btn-text {
            background: none;
            border: none;
            color: var(--renk-lacivert);
            font-weight: 700;
            font-size: 14px;
            cursor: pointer;
        }

        .hata-kutusu {
            background-color: #fee2e2;
            color: #991b1b;
            padding: 12px;
            border-radius: 10px;
            font-size: 13px;
            margin-bottom: 20px;
            border: 1px solid #fecaca;
        }

        .gizli {
            display: none;
        }

        .footer {
            text-align: center;
            font-size: 11px;
            color: #94a3b8;
            padding: 15px;
            background: #f8fafc;
            border-top: 1px solid #e2e8f0;
        }
    </style>
</head>
<body>

    <div class="arkaplan-dekor"></div>

    <div class="giris-karti">

        <div class="kart-baslik">
            <div class="logo-kutu">
                <!-- LOGO YOLU: Burayı kendi resim yolunuzla değiştirin -->
                <img src="~/lib/img/logos/aod.svg"
                     style="width:100%; height:100%; object-fit:cover;"
                     alt="Logo"
                     onerror="this.style.display='none'; this.parentElement.innerHTML='<span style=\'color:#0a1a5c; font-weight:bold;\'>AÖD</span>'">
            </div>
            <h2 class="baslik-yazi" id="baslik">Yönetici Girişi</h2>
            <div style="font-size:12px; color:#64748b; font-weight:600; text-transform:uppercase; margin-top:5px;">Ankara Öğretim Derneği</div>
        </div>

        <div class="kart-icerik">

            @if (ViewBag.Hata != null)
            {
                <div class="hata-kutusu">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Hata
                </div>
            }

            <form method="post">

                <!-- Ad Soyad (Gizli) -->
                <div class="form-grup gizli" id="isim-alani">
                    <label class="etiket">Ad Soyad</label>
                    <div class="input-kapsayici">
                        <input type="text" name="adsoyad" class="ozel-input" placeholder="Adınız Soyadınız">
                        <i class="fas fa-user ikon-sol"></i>
                    </div>
                </div>

                <!-- E-Posta -->
                <div class="form-grup">
                    <label class="etiket">E-Posta Adresi</label>
                    <div class="input-kapsayici">
                        <input type="email" name="email" class="ozel-input" placeholder="ornek@aod.org.tr" required>
                        <!-- Altın rengi ikon -->
                        <i class="fas fa-envelope ikon-sol"></i>
                    </div>
                </div>

                <!-- Şifre -->
                <div class="form-grup">
                    <label class="etiket">Şifre</label>
                    <div class="input-kapsayici">
                        <input type="password" name="sifre" id="sifreInput" class="ozel-input" placeholder="••••••••" required>
                        <!-- Altın rengi kilit -->
                        <i class="fas fa-lock ikon-sol"></i>
                        <!-- Lacivert göz -->
                        <i class="fas fa-eye ikon-sag" onclick="sifreGoster()"></i>
                    </div>
                    <a href="#" class="link-unuttum" id="link-unuttum">Şifremi Unuttum?</a>
                </div>

                <button type="submit" class="btn-lacivert" id="btn-gonder">
                    Giriş Yap <i class="fas fa-arrow-right"></i>
                </button>

                <div class="alt-gecis">
                    <span style="font-size:14px; color:#64748b;" id="text-alt">Hesabınız yok mu?</span>
                    <button type="button" class="btn-text" onclick="modDegistir()">
                        <span id="btn-text-alt">Yeni Üyelik Oluştur</span>
                    </button>
                </div>

            </form>
        </div>

        <div class="footer">
            &copy; @DateTime.Now.Year Ankara Öğretim Derneği
        </div>

    </div>

    <script>
        function sifreGoster() {
            var input = document.getElementById("sifreInput");
            if (input.type === "password") input.type = "text";
            else input.type = "password";
        }

        var girisModu = true;
        function modDegistir() {
            girisModu = !girisModu;
            var baslik = document.getElementById("baslik");
            var isimAlani = document.getElementById("isim-alani");
            var linkUnuttum = document.getElementById("link-unuttum");
            var btnGonder = document.getElementById("btn-gonder");
            var textAlt = document.getElementById("text-alt");
            var btnTextAlt = document.getElementById("btn-text-alt");

            if (!girisModu) {
                baslik.innerText = "Yeni Üyelik";
                isimAlani.classList.remove("gizli");
                linkUnuttum.classList.add("gizli");
                btnGonder.innerHTML = 'Kayıt Ol <i class="fa-solid fa-check"></i>';
                textAlt.innerText = "Zaten hesabınız var mı?";
                btnTextAlt.innerText = "Giriş Ekranına Dön";
            } else {
                baslik.innerText = "Yönetici Girişi";
                isimAlani.classList.add("gizli");
                linkUnuttum.classList.remove("gizli");
                btnGonder.innerHTML = 'Giriş Yap <i class="fa-solid fa-arrow-right"></i>';
                textAlt.innerText = "Hesabınız yok mu?";
                btnTextAlt.innerText = "Yeni Üyelik Oluştur";
            }
        }
    </script>
</body></html>
