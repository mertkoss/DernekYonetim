@using DernekYonetim
@using DernekYonetim.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DernekYonetim.Models.AdminKullanicilar

@{
    ViewData["Title"] = "Yönetici Ekle";
    // Eğer admin paneli için _Layout kullanıyorsan aşağıdaki satırı aç ve en dıştaki html/body etiketlerini sil:
    // Layout = "_Layout";
}

<!doctype html>
<html lang="tr">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        :root {
            --renk-lacivert: #0a1a5c;
            --renk-altin: #b8860b;
            --renk-arkaplan: #f8fafc;
            --renk-yazi: #334155;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            background-color: var(--renk-arkaplan);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            position: relative;
            padding-bottom: 50px;
        }

        .arkaplan-dekor {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 400px;
            background-color: var(--renk-lacivert);
            border-bottom-left-radius: 50px;
            border-bottom-right-radius: 50px;
            z-index: 0;
        }

        .sayfa-icerik {
            width: 100%;
            max-width: 500px;
            z-index: 10;
            margin-top: 40px;
        }

        .ozel-kart {
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            overflow: hidden;
            margin-bottom: 30px;
            position: relative;
        }

        .kart-baslik {
            text-align: center;
            padding: 40px 30px 10px 30px;
        }

        .logo-kutu {
            width: 90px;
            height: 90px;
            margin: 0 auto 15px auto;
            background: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            border: 4px solid var(--renk-arkaplan);
            overflow: hidden;
        }

        .baslik-yazi {
            color: var(--renk-lacivert);
            font-weight: 800;
            font-size: 22px;
            margin: 0;
        }

        .alt-baslik {
            font-size: 12px;
            color: #64748b;
            font-weight: 600;
            text-transform: uppercase;
            margin-top: 5px;
        }

        .kart-icerik {
            padding: 20px 40px 40px 40px;
        }

        .form-grup {
            margin-bottom: 20px;
            position: relative;
        }

        .etiket {
            font-size: 13px;
            font-weight: 700;
            color: var(--renk-yazi);
            margin-bottom: 6px;
            display: block;
            margin-left: 4px;
        }

        .input-kapsayici {
            position: relative;
            display: flex;
            align-items: center;
        }

        .ozel-input {
            width: 100%;
            height: 50px;
            padding: 10px 45px;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            font-size: 14px;
            color: #333;
            outline: none;
            transition: 0.3s;
            background: #f8fafc;
            position: relative;
            z-index: 1;
        }

            .ozel-input:focus {
                background: #fff;
                border-color: var(--renk-lacivert);
                box-shadow: 0 0 0 4px rgba(10, 26, 92, 0.1);
            }

        .ikon-sol {
            position: absolute;
            left: 15px;
            color: var(--renk-altin);
            font-size: 16px;
            z-index: 10;
            pointer-events: none;
        }

        .ozel-input:focus ~ .ikon-sol {
            color: var(--renk-lacivert);
        }

        .ikon-sag {
            position: absolute;
            right: 15px;
            color: var(--renk-lacivert);
            cursor: pointer;
            font-size: 16px;
            z-index: 10;
            opacity: 0.7;
            transition: 0.3s;
        }

            .ikon-sag:hover {
                opacity: 1;
                color: var(--renk-altin);
            }

        .btn-lacivert {
            width: 100%;
            height: 50px;
            background-color: var(--renk-lacivert);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            transition: 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 30px;
        }

            .btn-lacivert:hover {
                background-color: #051030;
            }

        .hata-kutusu {
            background-color: #fee2e2;
            color: #991b1b;
            padding: 12px;
            border-radius: 10px;
            font-size: 13px;
            margin-bottom: 20px;
            border: 1px solid #fecaca;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .footer {
            text-align: center;
            font-size: 11px;
            color: #94a3b8;
            padding: 15px;
            background: #f8fafc;
            border-top: 1px solid #e2e8f0;
        }
    </style>
</head>

<body>
    <div class="arkaplan-dekor"></div>

    <div class="sayfa-icerik">
        <div class="ozel-kart">
            <div class="kart-baslik">
                <div class="logo-kutu" style="width: 150px; height: 150px; border-radius: 50%; overflow: hidden; background-color: #fff; border: 1px solid #e2e8f0; display: flex; align-items: center; justify-content: center; padding: 15px; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);">
                    <img src="~/lib/img/logos/logo.jpeg" style="width: 100%; height: 100%; object-fit: contain;" alt="Logo" onerror="this.style.display='none'; this.parentElement.innerHTML='<span style=\'color:#0a1a5c; font-weight:bold; font-size:24px;\'>AÖD</span>'">
                </div>

                <h2 class="baslik-yazi">Sisteme Yönetici Ekle</h2>
                <div class="alt-baslik">Yetkili Kullanıcı Oluşturma Ekranı</div>
            </div>

            <div class="kart-icerik">
                @if (ViewBag.Hata != null)
                {
                    <div class="hata-kutusu">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>@ViewBag.Hata</span>
                    </div>
                }

                <form asp-action="Register" asp-controller="Auth" method="post" autocomplete="off">
                    <div class="form-grup">
                        <label class="etiket" for="KullaniciAdi">Kullanıcı Adı</label>
                        <div class="input-kapsayici">
                            <input asp-for="KullaniciAdi" type="text" class="ozel-input" placeholder="yeni_yonetici" required />
                            <i class="fas fa-user ikon-sol"></i>
                        </div>
                        <span asp-validation-for="KullaniciAdi" class="text-danger" style="font-size:12px;"></span>
                    </div>

                    <div class="form-grup">
                        <label class="etiket" for="AdSoyad">Ad Soyad</label>
                        <div class="input-kapsayici">
                            <input asp-for="AdSoyad" type="text" class="ozel-input" placeholder="Yöneticinin Adı Soyadı" required />
                            <i class="fas fa-id-card ikon-sol"></i>
                        </div>
                        <span asp-validation-for="AdSoyad" class="text-danger" style="font-size:12px;"></span>
                    </div>

                    <div class="form-grup">
                        <label class="etiket" for="Email">E-Posta Adresi</label>
                        <div class="input-kapsayici">
                            <input asp-for="Email" type="email" class="ozel-input" placeholder="yonetici@aod.org.tr" required />
                            <i class="fas fa-envelope ikon-sol"></i>
                        </div>
                        <span asp-validation-for="Email" class="text-danger" style="font-size:12px;"></span>
                    </div>

                    <div class="form-grup">
                        <label class="etiket" for="SifreHash">Geçici Şifre</label>
                        <div class="input-kapsayici">
                            <input asp-for="SifreHash" id="sifreInput" type="password" class="ozel-input" placeholder="••••••••" required />
                            <i class="fas fa-lock ikon-sol"></i>
                            <i class="fas fa-eye ikon-sag" onclick="sifreGoster()"></i>
                        </div>
                        <span asp-validation-for="SifreHash" class="text-danger" style="font-size:12px;"></span>
                    </div>

                    <button type="submit" class="btn-lacivert">
                        Yöneticiyi Kaydet <i class="fas fa-user-check"></i>
                    </button>

                    <div class="alt-gecis mt-3">
                        <a href="/Anasayfa/Index" class="btn-text" style="display: flex; align-items: center; justify-content: center; gap: 8px; color: #64748b; text-decoration: none; transition: 0.3s;">
                            <i class="fas fa-arrow-left"></i> Yönetim Paneline Dön
                        </a>
                    </div>
                </form>
            </div>

            <div class="footer">
                &copy; @DateTime.Now.Year Ankara Öğretim Derneği Yönetim Paneli
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function sifreGoster() {
            var input = document.getElementById("sifreInput");
            var icon = document.querySelector(".ikon-sag");

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }

        @if (TempData["KayitBasarili"] != null)
        {
                <text>
                Swal.fire({
                    title: 'İşlem Başarılı!',
                    text: 'Yeni yönetici sisteme başarıyla eklendi.',
                    icon: 'success',
                    timer: 3000,
                    timerProgressBar: true,
                    showConfirmButton: false,
                    background: '#ffffff',
                    color: '#0a1a5c',
                    iconColor: '#b8860b',
                    didClose: () => {
                        // Kayıt sonrası Login'e değil, formu temizlemek için aynı sayfaya yönlendiriyoruz
                        window.location.href = '/Auth/Register';
                    }
                });
                </text>
        }
    </script>
</body>
</html>