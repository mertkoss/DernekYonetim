@using DernekYonetim
@using DernekYonetim.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DernekYonetim.Models.AdminKullanicilar

@{
    ViewData["Title"] = "Üye Ol";
    // Eğer projen layout kullanıyorsa ve çift <html> problemi oluyorsa aç:
    // Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        :root {
            --bg: #ffffff;
            --text: #0f172a;
            --muted: #64748b;
            --border: #e5e7eb;
            --soft: #f8fafc;
            --primary: #2563eb;
            --primary-soft: #eff6ff;
            --shadow: 0 18px 45px rgba(15,23,42,.08);
            --shadow2: 0 10px 24px rgba(15,23,42,.06);
            --radius: 18px;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: "Inter", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            background: var(--bg);
            color: var(--text);
        }

        /* Sayfa üstü ince modern gradient şeridi (çok açık) */
        .top-accent {
            height: 10px;
            background: linear-gradient(90deg, rgba(37,99,235,.25), rgba(16,185,129,.18), rgba(168,85,247,.18));
        }

        .page {
            min-height: calc(100vh - 10px);
            display: flex;
            align-items: center;
            padding: 48px 0;
        }

        .title {
            font-weight: 700;
            letter-spacing: -.02em;
            margin: 0;
        }

        .subtitle {
            margin: 6px 0 0 0;
            color: var(--muted);
            font-size: 14px;
        }

        /* Ana kart */
        .wrap {
            background: #fff;
            border: 1px solid var(--border);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        /* Sol taraf görsel alanı (açık) */
        .side {
            position: relative;
            min-height: 220px;
            background: radial-gradient(600px 240px at 30% 30%, rgba(37,99,235,.18), transparent 60%), radial-gradient(520px 220px at 70% 30%, rgba(16,185,129,.14), transparent 60%), radial-gradient(520px 220px at 60% 80%, rgba(168,85,247,.12), transparent 60%), linear-gradient(180deg, #ffffff, #f8fafc);
            border-bottom: 1px solid var(--border);
        }

        .side-inner {
            position: absolute;
            inset: 0;
            padding: 26px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .badge-soft {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 10px 12px;
            border-radius: 999px;
            background: var(--primary-soft);
            color: #1d4ed8;
            font-weight: 600;
            font-size: 13px;
            width: fit-content;
        }

        .mini-card {
            background: rgba(255,255,255,.8);
            border: 1px solid var(--border);
            border-radius: 14px;
            padding: 12px 14px;
            box-shadow: var(--shadow2);
        }

            .mini-card b {
                font-weight: 700;
            }

            .mini-card div {
                color: var(--muted);
                font-size: 13px;
                margin-top: 2px;
            }

        /* Sağ form alanı */
        .login-wrap {
            padding: 22px;
        }
        @@media (min-width: 992px) {
            .wrap

        {
            display: grid;
            grid-template-columns: 42% 58%;
        }

        .side {
            min-height: 560px;
            border-bottom: none;
            border-right: 1px solid var(--border);
        }

        .login-wrap {
            padding: 34px;
        }

        }

        /* Form */
        .form-group {
            position: relative;
            margin-bottom: 14px;
        }

        .form-control {
            height: 50px;
            border-radius: 14px;
            border: 1px solid var(--border);
            background: #fff;
            color: var(--text);
            padding: 16px 44px 10px 14px;
            outline: none;
            box-shadow: none !important;
        }

            .form-control:focus {
                border-color: rgba(37,99,235,.55);
                box-shadow: 0 0 0 4px rgba(37,99,235,.10) !important;
            }

        /* floating label */
        .form-control-placeholder {
            position: absolute;
            top: 15px;
            left: 14px;
            color: #94a3b8;
            pointer-events: none;
            transition: .15s ease;
            font-size: 13px;
        }

        .form-control:not(:placeholder-shown) + .form-control-placeholder,
        .form-control:focus + .form-control-placeholder {
            top: 7px;
            font-size: 11px;
            color: #64748b;
        }

        /* eye icon */
        .field-icon {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            cursor: pointer;
        }

            .field-icon:hover {
                color: #475569;
            }

        .btn-primary {
            height: 50px;
            border-radius: 14px;
            font-weight: 700;
            letter-spacing: -.01em;
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            border: none;
            box-shadow: 0 12px 24px rgba(37,99,235,.18);
        }

            .btn-primary:hover {
                filter: brightness(1.02);
            }

        .helper-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .checkbox-wrap {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--muted);
            user-select: none;
            font-size: 14px;
        }

            .checkbox-wrap input {
                accent-color: #2563eb;
            }

        a {
            color: #1d4ed8;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .error-box {
            margin-top: 10px;
            background: #fff1f2;
            border: 1px solid #fecdd3;
            color: #9f1239;
            border-radius: 14px;
            padding: 10px 12px;
            font-weight: 600;
            font-size: 14px;
        }

        /* alt tablo */
        .admin-table-wrap {
            margin-top: 18px;
            background: #fff;
            border: 1px solid var(--border);
            border-radius: var(--radius);
            padding: 14px;
            box-shadow: var(--shadow2);
        }

            .admin-table-wrap h3 {
                margin: 0 0 10px 0;
                font-weight: 700;
                letter-spacing: -.02em;
                font-size: 18px;
            }

        table.admin-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            overflow: hidden;
            border-radius: 14px;
            border: 1px solid var(--border);
        }

            table.admin-table th, table.admin-table td {
                padding: 10px 12px;
                border-bottom: 1px solid var(--border);
                background: #fff;
                color: var(--text);
            }

            table.admin-table th {
                background: var(--soft);
                color: #334155;
                font-weight: 700;
                font-size: 13px;
            }

            table.admin-table tr:last-child td {
                border-bottom: none;
            }

            table.admin-table tr:hover td {
                background: #fafafa;
            }

        /* küçük üst ikonlar */
        .icon-row {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
        }

        .icon-btn {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            border: 1px solid var(--border);
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #475569;
            box-shadow: var(--shadow2);
        }

            .icon-btn:hover {
                background: var(--soft);
            }

        .divider {
            height: 1px;
            background: var(--border);
            margin: 16px 0;
        }
    </style>
</head>

<body>
    <div class="top-accent"></div>

    <section class="page">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9 col-xl-8">
                    <div class="text-center mb-3">
                        <h2 class="title">Dernek Yönetim Paneli</h2>
                        <p class="subtitle">Yeni admin hesabı oluştur</p>
                    </div>

                    <div class="wrap">
                        <!-- Sol bilgi alanı -->
                        <div class="side">
                            <div class="side-inner">
                                <div>
                                    <span class="badge-soft">
                                        <span class="fa fa-shield"></span>
                                        Güvenli Kayıt
                                    </span>
                                </div>

                                <div class="mini-card">
                                    <b>İpucu</b>
                                    <div>Kaydın DB’ye gidip gitmediğini alttaki tabloda anlık kontrol edebilirsin.</div>
                                </div>

                                <div class="mini-card">
                                    <b>Modern Tasarım</b>
                                    <div>Açık arka plan, beyaz input, siyah yazı.</div>
                                </div>
                            </div>
                        </div>

                        <!-- Sağ form -->
                        <div class="login-wrap">
                            <div class="d-flex align-items-start justify-content-between">
                                <div>
                                    <h3 class="mb-1" style="font-weight:800; letter-spacing:-.02em;">Üye Ol</h3>
                                    <div style="color:var(--muted); font-size:14px;">Bilgileri doldur ve hesabını oluştur.</div>
                                </div>

                                <div class="icon-row">
                                    <a href="#" class="icon-btn" title="Bilgi"><span class="fa fa-info"></span></a>
                                    <a href="#" class="icon-btn" title="Yardım"><span class="fa fa-question"></span></a>
                                </div>
                            </div>

                            <div class="divider"></div>

                            <form asp-action="Register" asp-controller="Auth" method="post" class="signin-form">
                                <div class="form-group">
                                    <input asp-for="KullaniciAdi" type="text" class="form-control" placeholder=" " required />
                                    <label class="form-control-placeholder" for="KullaniciAdi">Kullanıcı Adı</label>
                                    <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="SifreHash" id="password-field" type="password" class="form-control" placeholder=" " required />
                                    <label class="form-control-placeholder" for="SifreHash">Şifre</label>
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password" aria-label="Şifreyi göster/gizle"></span>
                                    <span asp-validation-for="SifreHash" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="AdSoyad" type="text" class="form-control" placeholder=" " required />
                                    <label class="form-control-placeholder" for="AdSoyad">Ad Soyad</label>
                                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Email" type="email" class="form-control" placeholder=" " required />
                                    <label class="form-control-placeholder" for="Email">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-primary w-100 mt-2">
                                    Kayıt Ol
                                </button>

                                @if (ViewBag.Hata != null)
                                {
                                    <div class="error-box">@ViewBag.Hata</div>
                                }

                                <div class="helper-row">
                                    <label class="checkbox-wrap mb-0">
                                        <input type="checkbox" checked />
                                        Beni hatırla
                                    </label>

                                    <a href="#">Şifremi unuttum</a>
                                </div>

                                <div class="text-center mt-3" style="color:var(--muted); font-size:14px;">
                                    Zaten hesabın var mı? <a href="/Auth/Login">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- ✅ DB kontrol tablosu: SİLMEDİM -->
                    <div class="admin-table-wrap">
                        <h3>Mevcut Adminler</h3>

                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th style="width:90px;">ID</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>Ad Soyad</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var adminler = ViewBag.Adminler as List<AdminKullanicilar>;
                                }

                                @if (adminler != null && adminler.Any())
                                {
                                    foreach (var a in adminler)
                                    {
                                        <tr>
                                            <td>@a.AdminId</td>
                                            <td>@a.KullaniciAdi</td>
                                            <td>@a.AdSoyad</td>
                                            <td>@a.Email</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" style="text-align:center; padding:12px; color:var(--muted);">
                                            Henüz kayıt yok
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
          document.addEventListener("click", function (e) {
            const toggle = e.target.closest(".toggle-password");
            if (!toggle) return;

            const selector = toggle.getAttribute("toggle");
            const input = document.querySelector(selector);
            if (!input) return;

            const isPassword = input.getAttribute("type") === "password";
            input.setAttribute("type", isPassword ? "text" : "password");

            toggle.classList.toggle("fa-eye");
            toggle.classList.toggle("fa-eye-slash");
          });
        })();
    </script>

</body>
</html>
