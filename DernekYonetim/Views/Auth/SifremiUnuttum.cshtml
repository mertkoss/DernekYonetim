@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --renk-lacivert: #0a1a5c;
            --renk-altin: #b8860b;
            --renk-arkaplan: #f8fafc;
            --renk-yazi: #334155;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            background-color: var(--renk-arkaplan);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .arkaplan-dekor {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 50%;
            background-color: var(--renk-lacivert);
            border-bottom-left-radius: 50px;
            border-bottom-right-radius: 50px;
            z-index: 0;
        }

        .giris-karti {
            background-color: #ffffff;
            width: 100%;
            max-width: 500px;
            border-radius: 20px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            position: relative;
            z-index: 10;
            overflow: hidden;
            margin: 20px;
        }

        .kart-baslik {
            text-align: center;
            padding: 40px 30px 10px 30px;
        }

        .logo-kutu {
            width: 90px;
            height: 90px;
            margin: 0 auto 15px auto;
            background: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            border: 4px solid var(--renk-arkaplan);
            overflow: hidden;
        }

        .baslik-yazi {
            color: var(--renk-lacivert);
            font-weight: 800;
            font-size: 22px;
            margin: 0;
        }

        .kart-icerik {
            padding: 20px 40px 40px 40px;
        }

        .form-grup {
            margin-bottom: 20px;
            position: relative;
        }

        .etiket {
            font-size: 14px;
            font-weight: 600;
            color: var(--renk-yazi);
            margin-bottom: 8px;
            display: block;
            margin-left: 4px;
        }

        .input-kapsayici {
            position: relative;
            display: flex;
            align-items: center;
        }

        .ozel-input {
            width: 100%;
            height: 50px;
            padding: 10px 45px;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            font-size: 15px;
            color: #333;
            outline: none;
            transition: 0.3s;
            background: #f8fafc;
            position: relative;
            z-index: 1;
        }

            .ozel-input:focus {
                background: #fff;
                border-color: var(--renk-lacivert);
                box-shadow: 0 0 0 4px rgba(10, 26, 92, 0.1);
            }

        .ikon-sol {
            position: absolute;
            left: 15px;
            color: var(--renk-altin);
            font-size: 18px;
            z-index: 10;
            pointer-events: none;
        }

        .ozel-input:focus ~ .ikon-sol {
            color: var(--renk-lacivert);
        }

        .btn-lacivert {
            width: 100%;
            height: 50px;
            background-color: var(--renk-lacivert);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            transition: 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 30px;
        }

            .btn-lacivert:hover {
                background-color: #051030;
            }

        .alt-gecis {
            text-align: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #e2e8f0;
        }

        .btn-text {
            color: var(--renk-lacivert);
            font-weight: 700;
            font-size: 14px;
            text-decoration: none;
            cursor: pointer;
        }

            .btn-text:hover {
                text-decoration: underline;
            }

        .hata-kutusu {
            background-color: #fee2e2;
            color: #991b1b;
            padding: 12px;
            border-radius: 10px;
            font-size: 13px;
            margin-bottom: 20px;
            border: 1px solid #fecaca;
        }

        /* Başarı Kutusu için stil ekledik */
        .basari-kutusu {
            background-color: #dcfce7;
            color: #166534;
            padding: 12px;
            border-radius: 10px;
            font-size: 13px;
            margin-bottom: 20px;
            border: 1px solid #bbf7d0;
        }

        .footer {
            text-align: center;
            font-size: 11px;
            color: #94a3b8;
            padding: 15px;
            background: #f8fafc;
            border-top: 1px solid #e2e8f0;
        }
    </style>
</head>
<body>

    <div class="arkaplan-dekor"></div>

    <div class="giris-karti">

        <div class="kart-baslik" style="display: flex; flex-direction: column; align-items: center; text-align: center;">
            <div class="logo-kutu" style="
        width: 100px;
        height: 100px;
        border-radius: 50%;
        overflow: hidden;
        background-color: #fff;
        border: 1px solid #e2e8f0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);">

                <img src="~/lib/img/logos/logo.jpeg"
                     style="width: 100%; height: 100%; object-fit: contain;"
                     alt="Logo"
                     onerror="this.style.display='none'; this.parentElement.innerHTML='<span style=\'color:#0a1a5c; font-weight:bold; font-size:24px;\'>AÖD</span>'">
            </div>

            <h2 class="baslik-yazi" style="margin-top: 15px; margin-bottom: 0;">Şifre Kurtarma</h2>
            <div style="font-size:13px; color:#64748b; margin-top:10px; line-height:1.5;">
                Hesabınıza kayıtlı e-posta adresinizi girin,<br>size bir sıfırlama bağlantısı gönderelim.
            </div>
        </div>

        <div class="kart-icerik">

            @if (ViewBag.Hata != null)
            {
                <div class="hata-kutusu">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Hata
                </div>
            }

            @if (ViewBag.Basarili != null)
            {
                <div class="basari-kutusu">
                    <i class="fas fa-check-circle"></i> @ViewBag.Basarili
                </div>
            }

            <form asp-action="SifremiUnuttum" asp-controller="Auth" method="post">

                <div class="form-grup">
                    <label class="etiket">E-Posta Adresi</label>
                    <div class="input-kapsayici">
                        <input type="email" name="email" class="ozel-input" placeholder="ornek@aod.org.tr" required>
                        <i class="fas fa-envelope ikon-sol"></i>
                    </div>
                </div>

                <button type="submit" class="btn-lacivert">
                    Bağlantı Gönder <i class="fas fa-paper-plane"></i>
                </button>

                <div class="alt-gecis">
                    <a href="/Auth/Login" class="btn-text">
                        <i class="fas fa-arrow-left"></i> Giriş Ekranına Dön
                    </a>
                </div>

            </form>
        </div>

        <div class="footer">
            &copy; @DateTime.Now.Year Ankara Öğretim Derneği
        </div>

    </div>

</body>
</html>