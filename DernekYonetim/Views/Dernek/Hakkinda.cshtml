@model HomeViewModel
@{
    ViewData["Title"] = "Anasayfa";
    // Bu satır sayfanın "iskeletini" _Layout dosyasından almasını sağlar:
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/hakkinda.css" />

<section class="page-section dernek-hakkinda-section">
    <div class="container">

        <div class="page-header">
            <h1 class="page-title">
                @Model.About?.Baslik
            </h1>

            <div class="page-meta">
                Son güncelleme:
                @Model.About?.GuncellemeTarihi?.ToString("dd MMMM yyyy")
            </div>
        </div>

        <div class="content-card">
            @Html.Raw(Model.About?.Icerik)
        </div>

    </div>
</section>

<script src="~/js/hakkinda.js"></script>