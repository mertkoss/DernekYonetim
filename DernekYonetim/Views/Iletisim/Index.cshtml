@model DernekYonetim.Models.Iletisim
@{
    ViewData["Title"] = "İletişim";
    Layout = "_Layout";
}

<section class="page-section" style="padding-top:120px">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-heading text-uppercase">Bize Ulaşın</h2>
            <h3 class="section-subheading text-muted">Her türlü soru ve öneriniz için yanınızdayız.</h3>
        </div>

        <div class="row">
            <div class="col-lg-5 mb-4">
                <div class="card border-0 shadow-sm p-4 h-100 bg-dark text-white rounded-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-box bg-warning text-dark me-3">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">Adres</h5>
                            <p class="mb-0 text-light opacity-75">@(Model?.Adres ?? "Adres bilgisi girilmemiş.")</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-box bg-warning text-dark me-3">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">Telefon</h5>
                            <p class="mb-0 text-light opacity-75">@(Model?.Telefon ?? "Telefon bilgisi girilmemiş.")</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-box bg-warning text-dark me-3">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">E-Posta</h5>
                            <p class="mb-0 text-light opacity-75">@(Model?.Eposta ?? "E-posta bilgisi girilmemiş.")</p>
                        </div>
                    </div>

                    <hr class="my-4 border-secondary">

                    <h5 class="mb-3">Sosyal Medya</h5>
                    <div class="d-flex gap-3">
                        <a href="#" class="btn btn-outline-light btn-social"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="btn btn-outline-light btn-social"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="btn btn-outline-light btn-social"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="btn btn-outline-light btn-social"><i class="fab fa-youtube"></i></a>
                    </div>

                    <button class="btn btn-warning mt-auto fw-bold" data-bs-toggle="modal" data-bs-target="#iletisimDuzenleModal">
                        <i class="fas fa-edit me-2"></i>Bilgileri Güncelle
                    </button>
                </div>
            </div>

            <div class="col-lg-7 mb-4">
                <div class="card border-0 shadow-sm h-100 rounded-4 overflow-hidden" style="min-height: 400px;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3008.963474349323!2d28.9774653!3d41.0082376!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDHCsDAwJzI5LjciTiAyOMKwNTgnMzguOSJF!5e0!3m2!1str!2str!4v1625000000000"
                            width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="iletisimDuzenleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0">
            <form action="/Iletisim/Guncelle" method="post">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title fw-bold">İletişim Bilgilerini Düzenle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Adres</label>
                        <textarea name="Adres" class="form-control" rows="3">@Model?.Adres</textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Telefon</label>
                        <input type="text" name="Telefon" class="form-control" value="@Model?.Telefon">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">E-Posta</label>
                        <input type="email" name="Eposta" class="form-control" value="@Model?.Eposta">
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-warning fw-bold px-4">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .icon-box {
        width: 45px;
        height: 45px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .btn-social {
        width: 40px;
        height: 40px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: 0.3s;
    }

        .btn-social:hover {
            background-color: #ffc107;
            color: #212529;
            border-color: #ffc107;
        }

    .rounded-4 {
        border-radius: 1.5rem !important;
    }
</style>